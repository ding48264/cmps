<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.gllg.isp.cmps.model.dao.TbHoldDao">

    <resultMap id="BaseResultMap" type="com.example.gllg.isp.cmps.model.entity.TbHold">
        <!--@Table tb_hold-->
        <result property="itemid" column="itemid" jdbcType="INTEGER"/>
        <result property="itemcode" column="itemcode" jdbcType="VARCHAR"/>
        <result property="holdcode" column="holdcode" jdbcType="VARCHAR"/>
        <result property="holdname" column="holdname" jdbcType="VARCHAR"/>
        <result property="holdrela" column="holdrela" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="idcardno" column="idcardno" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="qq" column="qq" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          itemid, itemcode, holdcode, holdname, holdrela, sex, age, idcardno, phone, qq
        from cpms.tb_hold
        where itemid = #{itemid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          itemid, itemcode, holdcode, holdname, holdrela, sex, age, idcardno, phone, qq
        from cpms.tb_hold
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          itemid, itemcode, holdcode, holdname, holdrela, sex, age, idcardno, phone, qq
        from cpms.tb_hold
        <where>
            <if test="itemid != null">
                and itemid = #{itemid}
            </if>
            <if test="itemcode != null and itemcode != ''">
                and itemcode = #{itemcode}
            </if>
            <if test="holdcode != null and holdcode != ''">
                and holdcode = #{holdcode}
            </if>
            <if test="holdname != null and holdname != ''">
                and holdname = #{holdname}
            </if>
            <if test="holdrela != null and holdrela != ''">
                and holdrela = #{holdrela}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="idcardno != null and idcardno != ''">
                and idcardno = #{idcardno}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="qq != null and qq != ''">
                and qq = #{qq}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="itemid" useGeneratedKeys="true">
        insert into cpms.tb_hold(holdcode, holdname, holdrela, sex, age, idcardno, phone, qq)
        values (#{holdcode}, #{holdname}, #{holdrela}, #{sex}, #{age}, #{idcardno}, #{phone}, #{qq})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cpms.tb_hold
        <set>
            <if test="holdcode != null and holdcode != ''">
                holdcode = #{holdcode},
            </if>
            <if test="holdname != null and holdname != ''">
                holdname = #{holdname},
            </if>
            <if test="holdrela != null and holdrela != ''">
                holdrela = #{holdrela},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="idcardno != null and idcardno != ''">
                idcardno = #{idcardno},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="qq != null and qq != ''">
                qq = #{qq},
            </if>
        </set>
        where itemid = #{itemid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cpms.tb_hold where itemid = #{itemid}
    </delete>

</mapper>