<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.gllg.isp.cmps.model.dao.TbHouseDao">

    <resultMap id="BaseResultMap" type="com.example.gllg.isp.cmps.model.entity.TbHouse">
        <!--@Table tb_house-->
        <result property="itemid" column="itemid" jdbcType="INTEGER"/>
        <result property="itemcode" column="itemcode" jdbcType="VARCHAR"/>
        <result property="housecode" column="housecode" jdbcType="VARCHAR"/>
        <result property="building" column="building" jdbcType="VARCHAR"/>
        <result property="unit" column="unit" jdbcType="VARCHAR"/>
        <result property="room" column="room" jdbcType="VARCHAR"/>
        <result property="holdcode" column="holdcode" jdbcType="VARCHAR"/>
        <result property="area" column="area" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          itemid, itemcode, housecode, building, unit, room, holdcode, area, type, state
        from cpms.tb_house
        where itemid = #{itemid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          itemid, itemcode, housecode, building, unit, room, holdcode, area, type, state
        from cpms.tb_house
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          itemid, itemcode, housecode, building, unit, room, holdcode, area, type, state
        from cpms.tb_house
        <where>
            <if test="itemid != null">
                and itemid = #{itemid}
            </if>
            <if test="itemcode != null and itemcode != ''">
                and itemcode = #{itemcode}
            </if>
            <if test="housecode != null and housecode != ''">
                and housecode = #{housecode}
            </if>
            <if test="building != null and building != ''">
                and building = #{building}
            </if>
            <if test="unit != null and unit != ''">
                and unit = #{unit}
            </if>
            <if test="room != null and room != ''">
                and room = #{room}
            </if>
            <if test="holdcode != null and holdcode != ''">
                and holdcode = #{holdcode}
            </if>
            <if test="area != null">
                and area = #{area}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="state != null and state != ''">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="itemid" useGeneratedKeys="true">
        insert into cpms.tb_house(housecode, building, unit, room, holdcode, area, type, state)
        values (#{housecode}, #{building}, #{unit}, #{room}, #{holdcode}, #{area}, #{type}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cpms.tb_house
        <set>
            <if test="housecode != null and housecode != ''">
                housecode = #{housecode},
            </if>
            <if test="building != null and building != ''">
                building = #{building},
            </if>
            <if test="unit != null and unit != ''">
                unit = #{unit},
            </if>
            <if test="room != null and room != ''">
                room = #{room},
            </if>
            <if test="holdcode != null and holdcode != ''">
                holdcode = #{holdcode},
            </if>
            <if test="area != null">
                area = #{area},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="state != null and state != ''">
                state = #{state},
            </if>
        </set>
        where itemid = #{itemid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cpms.tb_house where itemid = #{itemid}
    </delete>

</mapper>